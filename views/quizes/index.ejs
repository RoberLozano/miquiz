<form class="form-inline" method="get" action="/quizes">
	<div class="form-group">
		<label class="sr-only" for="busqueda">BÃºsqueda</label>
		<div class="input-group">
			<div class="input-group-addon">Busqueda:</div>
			<input type="text" class="form-control" id="busqueda" name="search" placeholder="Introduce la pregunta a buscar" />		
		</div>
	</div>
	<button type="submit" class="btn btn-success">Buscar</button>
